<% provide(:back_link, user_works_path(params[:id])) %>

<%= bootstrap_form_for([@user,@work]) do |f| %>
  <%= f.date_field :start_date %>
  <%= f.date_field :end_date %>
  <%= f.text_field :comment %>
  <%= f.select :app_flag, [["表示", 1], ["非表示", 0]] %>
  <hr>
  <%= f.submit '変更', class: "btn btn-primary form-submit-btn" %>

<% end %>